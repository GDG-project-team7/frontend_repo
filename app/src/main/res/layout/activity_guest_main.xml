<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/hiddenplace_logo"
                android:layout_marginLeft="20dp">
            </ImageView>

            <Button
                android:id="@+id/findGuideBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textSize="14sp"
                android:text="가이드 찾기">
            </Button>

            <Button
                android:id="@+id/GuestLogoutbtn"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="로그아웃"
                android:textSize="14sp">
            </Button>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로컬의 선택, 진짜를 경험하다"
            android:textSize="17sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/travelbutton"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@drawable/hiddenplace_travle"
                android:contentDescription="Travel Button"></Button>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@drawable/hiddenplace_eatbutton"></ImageView>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/hiddenplace_photo">
            </ImageView>
            <Button
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/hiddenplace_map">
            </Button>

            <Button
                android:id="@+id/lookRequestBtn"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:background="@drawable/hiddenplace_request">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_marginLeft="45dp"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="여행"
                android:textSize="13sp"
                android:gravity="center">
            </TextView>

            <TextView
                android:textSize="13sp"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="맛집"
                android:gravity="center">
            </TextView>

            <TextView
                android:textSize="13sp"
                android:layout_marginRight="0dp"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="포토스팟"
                android:gravity="center">
            </TextView>
            <TextView
                android:textSize="13sp"
                android:layout_marginRight="0dp"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="지도"
                android:gravity="center">
            </TextView>

            <TextView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="작성한 견적서"
                android:textSize="13sp">

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="히플 인기 관광지"
            android:textStyle="bold">
        </TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="히플 인기 관광지 이미지 1"
                    android:layout_marginLeft="30dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
                <ImageView
                    android:contentDescription="히플 인기 관광지 이미지 2"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
                <ImageView
                    android:contentDescription="히플 인기 관광지 이미지 3"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="히플 인기 포트폴리오"
            android:textStyle="bold">
        </TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="히플 인기 포폴 이미지 1"
                    android:layout_marginLeft="30dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
                <ImageView
                    android:contentDescription="히플 인기 포폴 이미지 2"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
                <ImageView
                    android:contentDescription="히플 인기 포폴 이미지 3"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hiddenplace_show">
                </ImageView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="히플 BEST 3 가이드"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/hiddenplace_guideshow"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/hiddenplace_guideshow"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/hiddenplace_guideshow"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>